@model IEnumerable<Examen_ll.Models.TareaCategoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Create category</h2>

<div class="row search">
    <div class="col-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-auto">
        <a class="btn btn-success" onclick="departments_search()" id="search-link"><i class="fas fa-search"></i></a>
        <a asp-action="Create" class="btn btn-success"><i class="far fa-file"></i> New</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Html.DisplayNameFor(model => model.CategoriaNombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoriaNombre)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CategoriaNombre"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.CategoriaNombre"><i class="far fa-file-alt"></i> Details</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoriaNombre"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>